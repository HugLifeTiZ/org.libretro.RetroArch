          "commit": "dc8d638db01288a51678dbd1edcbe358d12b0eab"
        }
      ]
    },
    {
      "name": "common-shaders",
      "make-install-args": [
        "PREFIX=${FLATPAK_DEST}"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libretro/common-shaders.git",
          "commit": "55e401834b732e62c34411321c4ffd82524345d4"
        }
      ]
    },
    {
      "name": "slang-shaders",
      "make-install-args": [
        "PREFIX=${FLATPAK_DEST}"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libretro/slang-shaders.git",
          "commit": "e3a942c688519eeb9a7b16fd7c6810ac31951680"
        }
      ]
    },
    {
      "name": "glsl-shaders",
      "make-install-args": [
        "PREFIX=${FLATPAK_DEST}"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libretro/glsl-shaders.git",
          "commit": "3c69044059b507bea9ddaabedc78fda6a81d6ced"
        }
      ]
    }
  ]
}

      "make-install-args": [
        "PREFIX=${FLATPAK_DEST}"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libretro/glsl-shaders.git",
          "commit": "257a5bb0fdffd4e62ead54ab1919ef0ff0cf0b79"
        }
      ]
    }
  ]
}

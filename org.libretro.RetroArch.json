          "commit": "28180c1369097b86c310f89c9f7b791e3451e579"
        }
      ]
    },
    {
      "name": "common-shaders",
      "make-install-args": [
        "PREFIX=${FLATPAK_DEST}"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libretro/common-shaders.git",
          "commit": "83b6f9a4cf844c5c1fd5292a26cd990c58ee3962"
        }
      ]
    },
    {
      "name": "slang-shaders",
      "make-install-args": [
        "PREFIX=${FLATPAK_DEST}"
      ],
      "sources": [

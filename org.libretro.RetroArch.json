          "commit": "62d4c4f0e7d4bc42c375e56a759458fa53be31f5"
        }
      ]
    },
    {
      "name": "common-shaders",
      "make-install-args": [
        "PREFIX=${FLATPAK_DEST}"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libretro/common-shaders.git",
          "commit": "55e401834b732e62c34411321c4ffd82524345d4"
        }
      ]
    },
    {
      "name": "slang-shaders",
      "make-install-args": [
        "PREFIX=${FLATPAK_DEST}"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libretro/slang-shaders.git",
          "commit": "b93526756836e812bfd1900c82bfa4d730a4aae5"
        }
      ]
    },
    {
      "name": "glsl-shaders",
      "make-install-args": [
        "PREFIX=${FLATPAK_DEST}"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libretro/glsl-shaders.git",
          "commit": "c3c2c8531299d7cdcee32092803a10cd4c6e72b9"
        }
      ]
    }
  ]
}

        "PREFIX=${FLATPAK_DEST}"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libretro/glsl-shaders.git",
          "commit": "6ba8c2b60650c1bbe7f632208a7e40c50d4b2ff9"
        }
      ]
    }
  ]
}
